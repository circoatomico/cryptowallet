<div class="p-5 m-4 bg-light rounded-3">
  <div class="py-5">

    <p id="notice" class="<%= notice.present? ? '' : 'visually-hidden' %>"><%=notice%></p>

    <h1> <%= Coin.model_name.human(count: @coins.count) %> </h1> 

    <table class="table">
      <thead>
        <tr>
          <th> <%= @coins.human_attribute_name(:description) %> </th>
          <th> <%= @coins.human_attribute_name(:acronym)%></th>
          <th> <%= @coins.human_attribute_name(:url_image) %></th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @coins.each do |coin| %>
          <tr>
            <td><%= coin.description %></td>
            <td><%= coin.acronym %></td> 
            <td> <%= image_tag coin.url_image, width: 25, height: 25 %> </td>
            <td><%= link_to t('links.show'), coin, class: "btn btn-primary btn-sm"  %></td>
            <td><%= link_to t('links.edit'), edit_coin_path(coin), class: "btn btn-primary btn-sm"  %></td>
            <td><%= link_to t('links.delete'), coin, method: :delete, data: { confirm: t('messages.confirm') }, class: "btn btn-danger btn-sm" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <%= link_to t('new.coin'), new_coin_path, class: "btn btn-primary btn-xs" %>
  </div>
</div>