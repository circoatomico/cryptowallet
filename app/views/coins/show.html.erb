<p id="notice"><%= notice %></p>

<div class="card m-4" style="width: 18rem;">
  <%= image_tag(@coin.url_image, width:"50", height: "50") %>
  <div class="card-body">
    
    <h5 class="card-title"><%= @coin.acronym %></h5>
    
    <p class="card-text">
      <%= @coin.description %>
    </p>

    <hr>

    <%= link_to t('links.edit'), edit_coin_path(@coin), class: "btn btn-sm btn-primary" %> |
    <%= link_to t('links.back'), coins_path, class: "btn btn-sm btn-primary" %>
 
  </div>
</div> 